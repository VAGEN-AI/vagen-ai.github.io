<script>
  // Format numbers to show 'k' for thousands
  function formatNumber(num: number) {
    return num > 999 ? (num / 1000).toFixed(1) + 'k' : num;
  }

  // Fetch GitHub stats directly
  async function fetchGitHubStats() {
    try {
      // Try to use default numbers immediately
      const starsElement = document.getElementById('hero-stars-count');
      const forksElement = document.getElementById('hero-forks-count');
      
      // Fetch latest stats from GitHub
      const response = await fetch('https://api.github.com/repos/RAGEN-AI/VAGEN');
      const data = await response.json();
      
      const stars = data.stargazers_count;
      const forks = data.forks_count;
      
      // Update stars count if available
      if (starsElement && stars !== undefined) {
        const formattedStars = formatNumber(stars);
        starsElement.textContent = String(formattedStars);
      }
      
      // Update forks count if available
      if (forksElement && forks !== undefined) {
        const formattedForks = formatNumber(forks);
        forksElement.textContent = String(formattedForks);
      }
    } catch (error) {
      console.error('Error fetching GitHub stats:', error);
      // Keep default values on error
    }
  }

  // Run when page is loaded
  document.addEventListener('DOMContentLoaded', fetchGitHubStats);

  // SVG GIF 同步功能
  function syncSVGGifs() {
    const svgGenerate = document.querySelector('img[src="figures/SVG_generate.gif"]') as HTMLImageElement;
    const svgTarget = document.querySelector('img[src="figures/SVG_target.gif"]') as HTMLImageElement;
    
    if (svgGenerate && svgTarget) {
      console.log('SVG GIFs found, attempting to sync...');
      
      // 简单的同步方法：当页面加载完成后，确保两个 GIF 都正确加载
      svgGenerate.addEventListener('load', () => {
        console.log('SVG Generate loaded');
      });
      
      svgTarget.addEventListener('load', () => {
        console.log('SVG Target loaded');
      });
      
      svgGenerate.addEventListener('error', () => {
        console.error('Failed to load SVG Generate GIF');
      });
      
      svgTarget.addEventListener('error', () => {
        console.error('Failed to load SVG Target GIF');
      });
    } else {
      console.log('SVG GIFs not found');
    }
  }

  // 页面加载完成后初始化 SVG 同步
  document.addEventListener('DOMContentLoaded', syncSVGGifs);
</script> 

