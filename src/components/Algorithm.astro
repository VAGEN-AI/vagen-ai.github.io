<script>
document.addEventListener('DOMContentLoaded', () => {
  document.querySelectorAll('#vagen .component-card').forEach((card) => {
    const header = card.querySelector(':scope > .component-header');
    const content = card.querySelector(':scope > .component-content');
    const icon = header?.querySelector('.expand-icon');

    if (header && content && icon) {
      const updateIcon = () => {
        icon.textContent = content.classList.contains('active') ? '-' : '+';
      };

      updateIcon();

      header.addEventListener('click', () => {
        content.classList.toggle('active');
        updateIcon();
      });
    }
  });

  document.querySelectorAll('#vagen .code-toggle').forEach((toggle) => {
    const targetId = toggle.getAttribute('data-target');
    const codeBlock = targetId ? document.getElementById(targetId) : null;
    const icon = toggle.querySelector('.toggle-icon');
    const text = toggle.querySelector('.toggle-text');

    if (!codeBlock || !icon || !text) {
      return;
    }

    const refresh = () => {
      const expanded = codeBlock.classList.contains('expanded');
      icon.textContent = expanded ? '-' : '+';
      text.textContent = expanded ? 'Hide Code' : 'Show Code';
    };

    refresh();

    toggle.addEventListener('click', () => {
      codeBlock.classList.toggle('expanded');
      refresh();
    });
  });
});
</script>
